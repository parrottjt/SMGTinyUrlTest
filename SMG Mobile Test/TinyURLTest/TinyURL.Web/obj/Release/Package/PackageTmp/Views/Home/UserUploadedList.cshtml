@model IEnumerable<TinyURL.Data.Models.UploadedImage>

@{
    ViewBag.Title = "Uploaded File List";
}

<h2>Uploaded Images</h2>

<table class="table">
    <tr>
        <th style="text-align: center;">
            Image Name
        </th>
        <th style="text-align: center;">
            Image
        </th>
        <th style="text-align: center;">
            Shortened URL Link
        </th>
    </tr>

    @foreach (var file in Model)
    {
        <tr>
            <td style="text-align: center; vertical-align: middle;">
                <p>@file.FileName.Split('.')[0]</p>
            </td>
            <td style="max-width: 50%; text-align: center; vertical-align: middle;">
                <img class="text-center" src="/UploadedImages/@file.FileName" style="max-width: 50%; max-height: 30%" />
            </td>
            <td style="text-align: center; vertical-align: middle;">
                <p>@file.TinyURL</p>
            </td>
        </tr>
    }

</table>
